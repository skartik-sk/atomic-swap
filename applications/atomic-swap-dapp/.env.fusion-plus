# Fusion+ Enhanced Atomic Swap Environment Configuration
# Copy this to .env.local in your project root

# ===========================================
# BLOCKCHAIN RPC ENDPOINTS
# ===========================================

# Ethereum Sepolia RPC URL (required)
VITE_ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# Sui Testnet RPC URL (required)
VITE_SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# WalletConnect Project ID (required for wallet connections)
VITE_WALLET_CONNECT_PROJECT_ID=your_walletconnect_project_id

# ===========================================
# SMART CONTRACT ADDRESSES
# ===========================================

# Ethereum Sepolia Contract Addresses
VITE_ETH_ESCROW_ADDRESS=0x1234567890123456789012345678901234567890
VITE_ETH_CROSSCHAIN_ORDER_ADDRESS=0x2345678901234567890123456789012345678901
VITE_ETH_LIMIT_ORDER_PROTOCOL_ADDRESS=0x3456789012345678901234567890123456789012
VITE_ETH_DUTCH_AUCTION_ADDRESS=0x4567890123456789012345678901234567890123
VITE_ETH_RESOLVER_NETWORK_ADDRESS=0x5678901234567890123456789012345678901234
VITE_WETH_ADDRESS=0x6789012345678901234567890123456789012345

# Sui Testnet Contract/Package IDs
VITE_SUI_ESCROW_PACKAGE_ID=0x123456789abcdef123456789abcdef123456789abcdef123456789abcdef123456
VITE_SUI_USED_SECRETS_REGISTRY_ID=0x234567890abcdef234567890abcdef234567890abcdef234567890abcdef234567

# ===========================================
# RESOLVER PRIVATE KEYS (FOR TESTING ONLY)
# ===========================================
# WARNING: Never use these in production! These are for testing purposes only.

# Ethereum Resolver Private Keys (must have 0x prefix)
VITE_RESOLVER2_PRIVATE_KEY=0x1111111111111111111111111111111111111111111111111111111111111111
VITE_RESOLVER3_PRIVATE_KEY=0x2222222222222222222222222222222222222222222222222222222222222222

# Sui Resolver Private Keys (must have 0x prefix)
VITE_SUI_RESOLVER2_PRIVATE_KEY=0x3333333333333333333333333333333333333333333333333333333333333333
VITE_SUI_RESOLVER3_PRIVATE_KEY=0x4444444444444444444444444444444444444444444444444444444444444444

# ===========================================
# FUSION+ CONFIGURATION
# ===========================================

# Dutch Auction Settings
VITE_AUCTION_START_DELAY=300
VITE_AUCTION_DURATION=3600
VITE_AUCTION_START_RATE_MULTIPLIER=6.0
VITE_MINIMUM_RETURN_RATE=0.8
VITE_DECREASE_RATE_PER_MINUTE=0.01
VITE_PRICE_CURVE_SEGMENTS=3

# Finality Lock Settings
VITE_ETHEREUM_FINALITY_BLOCKS=64
VITE_SUI_FINALITY_BLOCKS=100
VITE_SECRET_SHARING_DELAY=300

# Safety Deposit Settings
VITE_SAFETY_DEPOSIT_RATE=0.1
VITE_ETHEREUM_SAFETY_DEPOSIT_MIN=1000000000000000
VITE_SUI_SAFETY_DEPOSIT_MIN=1000000000

# Merkle Tree Settings
VITE_SECRET_TREE_DEPTH=4
VITE_PARTIAL_FILL_SEGMENTS=16
VITE_SECRET_REUSE_PREVENTION=true

# Relayer Service Settings
VITE_RELAYER_SERVICE_ENABLED=true
VITE_ORDER_BROADCAST_INTERVAL=5000
VITE_RESOLVER_NOTIFICATION_ENABLED=true

# Gas Price Adjustment Settings
VITE_GAS_PRICE_ADJUSTMENT_ENABLED=true
VITE_GAS_VOLATILITY_THRESHOLD=0.2
VITE_PRICE_ADJUSTMENT_FACTOR=1.5
VITE_EXECUTION_THRESHOLD_MULTIPLIER=1.2

# Security Settings
VITE_REENTRANCY_PROTECTION=true
VITE_EMERGENCY_PAUSE_ENABLED=true
VITE_UPGRADEABILITY_ENABLED=true

# Access Control (comma-separated addresses)
VITE_RESOLVER_WHITELIST=0x1234567890123456789012345678901234567890,0x2345678901234567890123456789012345678901
VITE_ADMIN_ADDRESSES=0x1111111111111111111111111111111111111111,0x2222222222222222222222222222222222222222
VITE_PAUSE_GUARDIAN=0x1111111111111111111111111111111111111111

# ===========================================
# SWAP RATE CONFIGURATION
# ===========================================

# Exchange rates for demonstration (adjust based on market)
VITE_ETH_TO_SUI_RATE=0.001
VITE_SUI_TO_ETH_RATE=1000

# Timelock durations (in seconds for ETH, milliseconds for Sui)
VITE_TIMELOCK_DURATION=3600
VITE_SUI_TIMELOCK_DURATION=3600000

# ===========================================
# UI CONFIGURATION
# ===========================================

# Feature flags
VITE_ENABLE_ADVANCED_FEATURES=true
VITE_ENABLE_LOGGING_PANEL=true
VITE_ENABLE_DUTCH_AUCTION_UI=true
VITE_ENABLE_SAFETY_DEPOSIT_UI=true

# Theme configuration
VITE_PRIMARY_COLOR=orange
VITE_SECONDARY_COLOR=amber
VITE_ACCENT_COLOR=yellow

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable development mode features
VITE_DEV_MODE=true
VITE_MOCK_TRANSACTIONS=true
VITE_VERBOSE_LOGGING=true

# Simulation settings for development
VITE_SIMULATE_NETWORK_DELAYS=true
VITE_SIMULATION_DELAY_MIN=1000
VITE_SIMULATION_DELAY_MAX=3000
