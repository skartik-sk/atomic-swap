# API Keys and External Services
VITE_INFURA_API_KEY=your_infura_project_id_here
VITE_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# Network Configuration
VITE_ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
VITE_SUI_RPC_URL=https://fullnode.testnet.sui.io:443

# Smart Contract Addresses (Update these after deployment)
VITE_ATOMIC_VAULT_ADDRESS=0x...deployed_atomic_vault_address...
VITE_INTERCHAIN_ORDER_BOOK_ADDRESS=0x...deployed_interchain_order_book_address...
VITE_PRICE_DISCOVERY_ENGINE_ADDRESS=0x...deployed_price_discovery_engine_address...
VITE_VALIDATOR_NETWORK_ADDRESS=0x...deployed_validator_network_address...

# Sui Package Configuration
VITE_SUI_PACKAGE_ID=0x...deployed_sui_package_id...

# Application Configuration
VITE_APP_NAME=Atomic Swap Protocol
VITE_APP_DESCRIPTION=Advanced Cross-Chain Atomic Swaps
VITE_APP_URL=https://atomicswap.io

# Development Configuration
VITE_ENABLE_DEVTOOLS=true
VITE_LOG_LEVEL=info

# Security Configuration
VITE_MAX_VAULT_DURATION=604800  # 7 days in seconds
VITE_MIN_VAULT_AMOUNT=1000000000000000  # 0.001 ETH in wei
VITE_CONFIRMATION_BLOCKS=2
