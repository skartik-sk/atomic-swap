{
  "name": "atomic-swap-toolkit",
  "version": "1.0.0",
  "description": "Advanced toolkit for Atomic Swap cross-chain verification",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "verify-bilateral-swap": "tsx src/verify-bilateral-swap.ts",
    "analyze-bridge-performance": "tsx src/analyze-bridge-performance.ts",
    "example-bilateral-swap": "tsx src/example-bilateral-swap.ts",
    "lint": "eslint src --ext .ts",
