    "@ethersproject/providers": "^5.7.2",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0",
    "ethers": "^6.8.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "tsx": "^3.14.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.6",
    "eslint": "^8.51.0",
